		</association>
		
		<association property="clubLikeDto" javaType="ClubLikeDto">
			<result column="club_like_no" property="clubLikeNo"/>
			<result column="club_no" property="clubNo"/>
			<result column="member_no" property="memberNo"/>
		</association>
	</resultMap>
	
		<select id="bestClubList" resultMap="clubLikeMap">

	 	 select * from (
   			 select rownum RN, TMP.* from (
	            select count(L.club_no) LIKECOUNT, c.club_name, c.club_sub_category, c.club_no, c.club_main_category 
	           		 from club_like L
	            		inner join club C on C.club_no = l.club_no 
	            		group by L.club_no, c.club_name, c.club_sub_category, c.club_no, c.club_main_category 
	            		order by LIKECOUNT desc           
    	    ) TMP
		) where RN between 1 and 3
	
	</select>
	
	
